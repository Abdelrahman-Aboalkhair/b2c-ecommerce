# === Database Configuration ===
DATABASE_URL=                             # The connection string for your database (e.g., MongoDB, PostgreSQL)

# === App Environment ===
NODE_ENV=development                      # Application environment (use 'development' or 'production')

# === Authentication Tokens ===
ACCESS_TOKEN_SECRET=                      # Secret key used to sign access tokens (JWT)
REFRESH_TOKEN_SECRET=                     # Secret key used to sign refresh tokens
SESSION_SECRET=                           # Secret used for session handling (e.g., with express-session)

# === Stripe Payment Gateway ===
STRIPE_PUBLIC_KEY=                        # Your Stripe public key for client-side interactions
STRIPE_SECRET_KEY=                        # Your Stripe secret key for server-side API calls
STRIPE_WEBHOOK_SECRET=                    # Stripe webhook signing secret to verify event integrity

# === Redis Configuration ===
REDIS_HOST=                               # Redis server hostname (e.g., localhost or remote host)
REDIS_PORT=                               # Redis server port (default is 6379)

# === Google OAuth ===
GOOGLE_CLIENT_ID=                         # Google OAuth client ID
GOOGLE_CLIENT_SECRET=                     # Google OAuth client secret
GOOGLE_CALLBACK_URL_PROD=                 # OAuth callback URL used in production
GOOGLE_CALLBACK_URL_DEV=                  # OAuth callback URL used in development

# === Facebook OAuth ===
FACEBOOK_APP_ID=                          # Facebook App ID for OAuth
FACEBOOK_APP_SECRET=                      # Facebook App Secret
FACEBOOK_CALLBACK_URL_PROD=               # Facebook OAuth callback URL for production
FACEBOOK_CALLBACK_URL_DEV=                # Facebook OAuth callback URL for development

# === Apple OAuth ===
APPLE_CLIENT_ID=                          # Apple Service ID (client_id)
APPLE_TEAM_ID=                            # Apple Developer Team ID
APPLE_KEY_ID=                             # Key ID for the private authentication key
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"  # Apple private key (PEM format)
APPLE_CALLBACK_URL_DEV=                   # Apple OAuth callback URL for development
APPLE_CALLBACK_URL_PROD=                  # Apple OAuth callback URL for production

# === Twitter OAuth ===
TWITTER_CONSUMER_KEY=                     # Twitter API key (consumer key)
TWITTER_CONSUMER_SECRET=                  # Twitter API secret key (consumer secret)
TWITTER_CALLBACK_URL_DEV=                 # Twitter OAuth callback URL for development
TWITTER_CALLBACK_URL_PROD=                # Twitter OAuth callback URL for production

# === Email Configuration ===
EMAIL_USER=                               # Email address used to send emails (SMTP)
EMAIL_PASS=                               # App password or SMTP password for the email account

# === Cloudinary Image Storage ===
CLOUDINARY_CLOUD_NAME=                    # Cloudinary cloud name
CLOUDINARY_API_KEY=                       # Cloudinary API key
CLOUDINARY_API_SECRET=                    # Cloudinary API secret

# === Client App URL ===
CLIENT_URL=http://localhost:3000          # Base URL of your frontend client (used for CORS or redirects)
